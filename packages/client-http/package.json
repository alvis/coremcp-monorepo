{
  "name": "@coremcp/client-http",
  "version": "0.0.0",
  "private": true,
  "description": "HTTP transport implementation for MCP clients with OAuth 2.0 and Server-Sent Events support",
  "keywords": [
    "mcp"
  ],
  "homepage": "https://github.com/alvis/coremcp-monorepo#readme",
  "bugs": {
    "url": "https://github.com/alvis/coremcp-monorepo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvis/coremcp-monorepo.git"
  },
  "license": "MIT",
  "type": "module",
  "imports": {
    "#connection": "./src/connection/index.ts",
    "#core": "./src/core/index.ts",
    "#oauth": "./src/oauth/index.ts",
    "#*": "./src/*.ts"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "run build",
    "coverage": "run coverage --",
    "lint": "run lint --",
    "prepare": "run prepare",
    "test": "run test --",
    "typecheck": "run typecheck",
    "watch": "run watch"
  },
  "lint-staged": {
    "*": "true"
  },
  "browserslist": [
    "> 1%",
    "node > 22"
  ],
  "dependencies": {
    "@coremcp/client": "workspace:*",
    "@coremcp/core": "workspace:*",
    "@coremcp/protocol": "workspace:*",
    "openid-client": "^6.8.1"
  },
  "devDependencies": {
    "undici": "catalog:test"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "imports": {
      "#*": {
        "type": "./lib/*.d.ts",
        "default": "./lib/*.js"
      }
    }
  }
}
